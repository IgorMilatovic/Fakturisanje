@model Fakturisanje.Models.Faktura

@{
    ViewBag.Title = "Arhiviranje";
}

<h3>Arhiviranje</h3>

<h4>Da li ste sigurni da želite da arhivirate fakturu?</h4>
<div>
    <h4>Faktura broj &nbsp;<span style="font-weight: bold;">@Html.DisplayFor(model => model.IdFakture)</span>&nbsp; od &nbsp;<span style="font-weight: bold;">@Html.DisplayFor(model => model.Datum)</span></h4>
    <hr />
    

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    @if (Model.Obrisana == true)
    {
        @Html.ActionLink("Nazad na listu", "ArhiviraneFakture") <span> &nbsp;|&nbsp; </span>
    }
    else
    {
        @Html.ActionLink("Nazad na listu", "Index") <span> &nbsp;|&nbsp; </span>
    } 

    <input type="submit" value="Potvrdi" class="btn btn-warning" />
</div>
    }
</div>
